header.header
  .container.header__container
    nav(role="navigation").header-nav.header__nav
      ul.header-nav__list
        li.header-nav__item
          a(href="#").header-nav__link Shop
          ul.header-nav__dropdown
            li.header-nav__dropdown-item
              picture.header-nav__dropdown-picture
                img(src="/images/header-nav-img-1.png", alt="Black row warrior")
              a(href="#").header-nav__dropdown-link Black row warrior
            li.header-nav__dropdown-item
              picture.header-nav__dropdown-picture
                img(src="/images/header-nav-img-2.png", alt="Black row warrior")
              a(href="#").header-nav__dropdown-link Black row warrior
            li.header-nav__dropdown-item
              picture.header-nav__dropdown-picture
                img(src="/images/header-nav-img-3.png", alt="Black row warrior")
              a(href="#").header-nav__dropdown-link Black row warrior
        li.header-nav__item
          a(href="#").header-nav__link About
        li.header-nav__item
          a(href="#").header-nav__link Contact
    .header__logo-wrap
      a(href="/").header__logo
        img(src="/images/logo-long.svg", alt="RowWarrior").header__logo-img
    .header__sc-list-wrap
      ul.sc-list.header__sc-list
        li.sc-list__item
          a(href="#").sc-list__link
            svg.icon.sc-list__icon
              use(xlink:href="/images/sprite.svg#facebook")
        li.sc-list__item
          a(href="#").sc-list__link
            svg.icon.sc-list__icon
              use(xlink:href="/images/sprite.svg#instagram")
        li.sc-list__item
          a(href="#").sc-list__link
            svg.icon.sc-list__icon
              use(xlink:href="/images/sprite.svg#twitter")